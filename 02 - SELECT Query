

##############################
  02 - SELECT Query
##############################

# SELECT *
SELECT * FROM employees;

# SELECT Column
SELECT e_id, e_salary, e_name FROM employees;

# SELECT DISTINCT 
SELECT DISTINCT(e_dept) FROM employees;

# SELECT COUNT
SELECT COUNT(*) FROM employees; # Find how many entries


SELECT COUNT(DISTINCT(e_dept)) FROM employees; # FInd how many total departments exists


SELECT COUNT(DISTINCT(e_dept)) as "Count of Dept" FROM employees; # Find how many total departments exists

# SELECT Example Without DISTINCT
SELECT e_dept FROM employees;
SELECT COUNT(e_dept) FROM employees;  # Find how many entries for department

# SQL WHERE Clause
SELECT * FROM employees WHERE e_dept = "Tech"
